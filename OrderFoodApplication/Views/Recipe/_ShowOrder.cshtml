@model OrderFoodApplication.Models.OrderRecipeDetails

<div class="container-fluid shadow rounded">
    <div class="row">
        <div class="col-12 pt-4">
            <img src="@Model.Image_url" class="w-95" id="order-img" />
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-sm-10 col-md-10 col-lg-10 col-xl-10">
            <h2 class="text-dark">@Model.Title</h2>
        </div>
        <div class="col-sm-2 col-md-2 col-lg-2 col-xl-2">
            <button type="button" class="btn btn-sm btn-success p-2 text-end" >Order</button>
        </div>
    </div>
    <div class="row" >
        <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
            <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th>Quantity</th>
                        <th>Unit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ing in Model.Ingredients)
                        {
                            <tr>
                                <td>@ing.Description</td>
                                <td>@ing.Quantity</td>
                                <td>@ing.Unit</td>
                            </tr>
                        }
                    </tbody>
            </table>
        </div>
        </div>
        <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
            <div class="p-2">
                <h4 class="text-dark">Bill Details</h4>
                <div class="row border-bottom">
                    <label class="col-6 col-form-label">Price</label>
                    <div class="col-6 text-end">
                        <span>150</span>
                    </div>
                </div>
                <div class="row border-bottom">
                    <label class="col-7 col-form-label">Quantity</label>
                    <div class="col-5 text-end">
                        <span><i class="fa-solid fa-plus"></i></span>
                        <input type="text" class="form-control d-inline w-50 bg-white" readonly/>
                        <span><i class="fa-solid fa-minus"></i></span>
                    </div>
                </div>
                <div class="row border-bottom">
                    <label class="col-6 col-form-label">Delivery Charges</label>
                    <label class="col-6 col-form-label text-success fw-bold text-end">Free</label>
                </div>
                <div class="row">
                    <label class="col-6 col-form-label fs-5 fw-bold">Total</label>
                    <label class="col-6 col-form-label text-success fw-bold text-end">150</label>
                </div>
            </div>
        </div>
    </div>
</div>
